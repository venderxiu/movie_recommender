<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.moviedemo.dao.ScorecountDao">

    <resultMap type="com.example.moviedemo.entity.Scorecount" id="ScorecountMap">
        <result property="movieid" column="movieID" jdbcType="INTEGER"/>
        <result property="count" column="count" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ScorecountMap">
        select
          movieID, count
        from movieProject.ScoreCount
        where movieID = #{movieid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ScorecountMap">
        select
          movieID, count
        from movieProject.ScoreCount
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ScorecountMap">
        select
        movieID, count
        from movieProject.ScoreCount
        <where>
            <if test="movieid != null">
                and movieID = #{movieid}
            </if>
            <if test="count != null">
                and count = #{count}
            </if>
        </where>
    </select>
    <!--新增所有列-->
    <insert id="insert" keyProperty="movieid" useGeneratedKeys="true">
        insert into movieProject.ScoreCount(count)
        values (#{count})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update movieProject.ScoreCount
        <set>
            <if test="count != null">
                count = #{count},
            </if>
        </set>
        where movieID = #{movieid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from movieProject.ScoreCount where movieID = #{movieid}
    </delete>

    <!--查询热门电影分页显示-->
    <select id="findHotsByPage" resultMap="ScorecountMap">
        select *
        from movieProject.ScoreCount
        order by count desc
        limit #{pageNow}, #{rows}
    </select>
</mapper>
